<div class="container-fluid">
  <div class="row mb-5 ">
    <h3>Current user is <%=current_user.email%></h3>
  </div>
  <div class="row">
    <div>
      <h6>
        Create new articles by clicking New article
      </h6>
      <%= link_to 'New article', new_article_path, :class => "btn btn-outline-primary mb-5" %>
    </div>
    <table class="table">
      <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>



      </thead>
      <tbody>
      <tr>
        <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td> <%= link_to 'Show', article_path(article) ,:class => "btn btn-outline-success " %>

          </td>
          <td> <%= link_to 'Edit', edit_article_path(article) ,:class => "btn btn-outline-info "%>
          </td>
          <td><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-outline-danger "%>
          </td>
        </tr>
      <% end %>
      </tr>
      </tbody>
    </table>

  </div>
</div>