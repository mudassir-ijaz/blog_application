
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card mb-5" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Commenter</h5>
          <p class="card-text text-muted"><%= comment.commenter %></p>
          <h6 class="card-subtitle mb-2">Comment</h6>
          <p class="card-text text-muted"> <%= comment.body %></p>
          <%= link_to 'Destroy Comment', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-outline-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>